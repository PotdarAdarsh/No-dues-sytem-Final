<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_pakka"
    android:layout_height="match_parent"
    tools:context=".Unlock_form">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=":HOD Authentication: "
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/req"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: You can't unlock ypur No-Dues form withot HOD's authentication  "
        android:layout_marginTop="190dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/accounts"
            app:civ_border_width="2dp"
            android:layout_margin="5dp"
            app:civ_border_color="#FF000000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tVName"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="HOD Authentication:" />


            <!--  <TextView
                  android:id="@+id/textView2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:text="Department DUES:" />-->

            <TextView
                android:id="@+id/tv_hod_sts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="19dp"
                android:text="pending..." />
        </LinearLayout>




    </LinearLayout>
    <Button
        android:id="@+id/req_btn_hod"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textSize="18dp"
        android:backgroundTint="#0E80D0"
        android:text="REQUEST TO HOD" />
    <Button
        android:id="@+id/btn_form"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="#0E80D0"
        android:text="Generate No-dues"
        android:textSize="18dp"/>
</LinearLayout>