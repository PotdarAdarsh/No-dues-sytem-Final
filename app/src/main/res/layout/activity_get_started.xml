<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/get_started"
    android:orientation="vertical"
    tools:context=".Get_started">



    <Button
        android:id="@+id/super_module"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="#1180CF"
        android:text="SUPER MODULE"
        android:textSize="25dp" />
    <!--
    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#1180CF"
        android:text="STUDENT"
        android:textSize="24dp" />

        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:backgroundTint="#1180CF"
            android:text="STUDENT"
            android:textSize="14dp" />

        <Button
            android:id="@+id/hod_module"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1180CF"
            android:text="HOD MODULE"
            android:textSize="14dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnAccounts"
            android:layout_width="0dp"
            android:backgroundTint="#1180CF"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:text="Accounts Department"/>

        <Button
            android:id="@+id/btnLibrary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1180CF"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Library Department"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHostel"
            android:layout_width="0dp"
            android:backgroundTint="#1180CF"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Hostel Department"/>

        <Button
            android:id="@+id/btnExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1180CF"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Exam Department"/>

    </LinearLayout>




</LinearLayout>